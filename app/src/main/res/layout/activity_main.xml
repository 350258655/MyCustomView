<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.shake.customviews.MainActivity">

    <Button
        android:id="@+id/btn_add_sub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="购物车加减View"/>
    <Button
        android:id="@+id/btn_wheel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="自定义轮播图"/>
    <Button
        android:id="@+id/btn_youku"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="优酷菜单"/>
    <Button
        android:id="@+id/btn_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="下拉选择框"/>
    <Button
        android:id="@+id/btn_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="自定义开关"/>
    <Button
        android:id="@+id/btn_cus_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="完全自定义开关"/>
    <Button
        android:id="@+id/btn_float"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="悬浮窗"/>

    <!--<Button-->
        <!--android:id="@+id/btn_float_second"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="另一种悬浮窗"/>-->

    <Button
        android:id="@+id/btn_sliding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="侧滑菜单"/>
    <Button
        android:id="@+id/btn_sweep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="滑动删除"/>
    <Button
        android:id="@+id/btn_loading_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="加载对话框"/>
    <Button
        android:id="@+id/btn_exit_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="退出对话框"/>
</LinearLayout>
