<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.administrator.mycustomview">

    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.SYSTEM_OVERLAY_WINDOW" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".numberaddsub.NumberAddSubActivity" />
        <activity android:name=".spinner.SpinnerActivity" />
        <activity android:name=".switchview.SwitchActivity" />
        <activity android:name=".toggle.ToggleButtonActivity" />
        <activity android:name=".wheel.WheelActivity" />
        <activity android:name=".youku.YoukuMenuActivity" />
        <activity android:name=".floatview.FloatViewActivity" />

        <service android:name=".floatview.FloatViewService" />

        <activity android:name=".sliding.SlidingActivity" />
        <activity android:name=".sweep.SweepActivity" />
    </application>

</manifest>
