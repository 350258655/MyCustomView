<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.example.administrator.mycustomview"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/>
    <uses-permission android:name="android.permission.SYSTEM_OVERLAY_WINDOW"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".numberaddsub.NumberAddSubActivity">
        </activity>
        <activity android:name=".spinner.SpinnerActivity">
        </activity>
        <activity android:name=".switchview.SwitchActivity">
        </activity>
        <activity android:name=".toggle.ToggleButtonActivity">
        </activity>
        <activity android:name=".wheel.WheelActivity">
        </activity>
        <activity android:name=".youku.YoukuMenuActivity">
        </activity>
        <activity android:name=".floatview.FloatViewActivity">
        </activity>

        <service android:name=".floatview.FloatViewService">
        </service>

        <activity android:name=".sliding.SlidingActivity">
        </activity>
    </application>

</manifest>
